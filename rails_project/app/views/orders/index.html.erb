<h1>Orders</h1>
<%= link_to "Start new order" , new_order_path, :method => :get %>
<br/>
<div class="row" style="padding:5;margin:5;">
	<div class="col-md-12" style="  padding:5;margin:5;">
		<table class="table table-striped table-bordered table-condensed">
			<tr>
				<td>Order</td>
				<td>Resturants</td>
				<td>Invited</td>
				<td>Joined</td>
				<td>Status</td>
				<td>Actions</td>
			</tr>
			<% @all_orders.each do |order| %>	
			<tr id="row_<%= order.id %>">
				
				<td><%= order.order_title %></td>
				<td><%= order.from %></td>
				<td>0</td>
				<td>0</td>
				<td><%= order.status %></td>
				<td>
					<%= link_to 'view' , order %> |
					<% if ( order.status == 'waiting' ) %>
						<a href='orders/upadteStatus?id=%= order.id %>&s=f' >Finish</a> |
						<a href='orders/upadteStatus?id=%= order.id %>&s=c' >Cancle</a>
					<% end %>
				<td>
			</tr>
			<% end %>
		</table>
		<% will_paginate @all_orders %>
		<div class='text-center'>
			<ul class="pagination">
				<% @count.times do |x| %>
					<% if ( @page == (x+1) ) %>
						<li class="active" ><a href="orders?page= <%= x+1 %>"><%= x+1 %></a></li>
					<% else %>
						<li><a href="orders?page= <%= x+1 %>"><%= x+1 %></a></li>
					<% end %>	
				<% end %>
				
			</ul>
		</div>
	</div>
</div>
